<p id="notice"><%= notice %></p>

<div class="section">
  <h5>Filer</h5>
  <%= form_tag '', method: :get do %>
    <div class="row">
      <div class="input-field col s4">
        <%= date_field_tag :begin_date, class: 'datepicker' %>
      </div>
      <div class="input-field col s4">
        <%= date_field_tag :end_date, class: 'datepicker'  %>
      </div>
      <div class="input-field col s4">
        <%= submit_tag 'Filter', class: 'btn' %>
      </div>
    </div>
  <% end %>
</div>
<div class="divider"></div>

<div class="section">
  <table>
    <thead>
    <tr>
      <th>Date</th>
      <th>Station</th>
      <th>Holiday</th>
      <th>Holiday Reference</th>
      <th>Day of week</th>
      <th>Finished</th>
      <th colspan="1"></th>
    </tr>
    </thead>

    <tbody>
    <% @plans.each do |plan| %>
      <tr>
        <td><%= plan.date %></td>
        <td><%= plan.station.name %></td>
        <td><%= plan.holiday %></td>
        <td><%= plan.holiday_reference %></td>
        <td><%= plan.day_of_week %></td>
        <td><%= plan.finished %></td>
        <td><%= link_to 'Measures', edit_plan_path(plan) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Plan', new_plan_path %>
